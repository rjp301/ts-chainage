{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src"
  ]
}